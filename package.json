{
  "name": "coffee-timer",
  "version": "1.0.0",
  "description": "Simple, relaxing coffee timer application with web push notifications",
  "scripts": {
    "dev": "next dev --port 3009",
    "build": "next build",
    "start": "next start --port 3009",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings=0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "e2e": "playwright test",
    "e2e:desktop": "playwright test --project=\"Desktop Chrome\"",
    "e2e:tablet": "playwright test --project=\"Tablet Safari\"",
    "e2e:mobile": "playwright test --project=\"Mobile Chrome\"",
    "prepare": "husky",
    "prettier": "prettier --ignore-unknown --write .",
    "clean": "rm -rf .next node_modules .playwright-mcp test-results playwright-report .pnpm-store"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slider": "^1.3.6",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.553.0",
    "next": "^16.0.3",
    "next-intl": "^4.5.3",
    "next-themes": "^0.4.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/eslintrc": "^3.3.1",
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.22",
    "axe-core": "^4.11.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.20.0+sha512.cf9998222162dd85864d0a8102e7892e7ba4ceadebbf5a31f9c2fce48dfce317a9c53b9f6464d1ef9042cba2e02ae02a9f7c143a2b438cd93c91840f0192b9dd",
  "volta": {
    "node": "22.21.1"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write"
  }
}
